<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:id="@+id/animal_cardview"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:background="#FFFFFF"
        android:elevation="40dp"
        app:cardCornerRadius="15dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_animal"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/round_image"
                android:src="@drawable/sample"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/kind_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="5dp"
                android:text="품종"
                android:textSize="11sp"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/img_animal"
                app:layout_constraintTop_toTopOf="@+id/img_animal" />

            <TextView
                android:id="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="포메라니안"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/kind_title"
                app:layout_constraintStart_toEndOf="@+id/kind_title"
                app:layout_constraintTop_toTopOf="@+id/kind_title" />

            <TextView
                android:id="@+id/age_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginStart="18dp"
                android:textColor="@color/black"
                android:textSize="11sp"
                android:text="나이"
                app:layout_constraintStart_toEndOf="@+id/img_animal"
                app:layout_constraintTop_toBottomOf="@+id/kind_title"
                 />

            <TextView
                android:id="@+id/age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="3세"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/age_title"
                app:layout_constraintStart_toEndOf="@+id/age_title"
                app:layout_constraintTop_toTopOf="@+id/age_title" />

            <TextView
                android:id="@+id/notice_start_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="3dp"
                android:text="공고날짜"
                android:textSize="11sp"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/img_animal"
                app:layout_constraintTop_toBottomOf="@+id/age_title" />

            <TextView
                android:id="@+id/notice_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="startDate"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/notice_start_title"
                app:layout_constraintStart_toEndOf="@+id/notice_start_title"
                app:layout_constraintTop_toTopOf="@+id/notice_start_title" />

            <TextView
                android:id="@+id/notice_end_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginTop="3dp"
                android:text="마감날짜"
                android:textSize="11sp"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/img_animal"
                app:layout_constraintTop_toBottomOf="@+id/notice_start_title" />

            <TextView
                android:id="@+id/notice_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="endDate"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/notice_end_title"
                app:layout_constraintStart_toEndOf="@+id/notice_end_title"
                app:layout_constraintTop_toTopOf="@+id/notice_end_title" />

            <ImageView
                android:id="@+id/sexType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                app:layout_constraintBottom_toBottomOf="@+id/type"
                app:layout_constraintStart_toEndOf="@+id/type"
                app:layout_constraintTop_toTopOf="@+id/type"
                app:srcCompat="@drawable/gender_female" />

            <ImageView
                android:id="@+id/img_heart"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/heart" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>


